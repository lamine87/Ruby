
    <div class="">
        <h1 class="d-flex align-items-center justify-content-center">Bienvenue sur ma landing page. </h1>
    <table class="table table-striped table-dark">
      <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @user.each do |user| %>
            <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.prenom %></td>
                <td><%= user.nom %></td>
                <td><%= user.email %></td>
                 <td class="d-flex align-items-center justify-content-center">
                     <%= link_to 'Detail', user_path(user.id), method: 'GET', class:'btn btn-info mr-2 m-2' %>
                   	 <%= link_to 'Editer', edit_user_path(user.id), class: 'btn btn-primary mr-2 m-2' %>
                     <%= button_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger mr-2' %>

                 </td> 
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>


