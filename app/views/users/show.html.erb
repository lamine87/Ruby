<!-- app/views/users/show.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title d-flex align-items-center justify-content-center">Détails de l'utilisateur</h1>
          
          <p class="card-text">
            <strong>Prénom:</strong>
            <%= @user.prenom %>
          </p>
          <p class="card-text">
            <strong>Nom:</strong> 
            <%= @user.nom %>
          </p>
          <p class="card-text">
            <strong>Email:</strong> 
            <%= @user.email %>
          </p>
          <div class="d-flex align-items-center justify-content-center">
            <%= link_to 'Éditer', edit_user_path(@user), class:'btn btn-primary mr-2' %>
            <%= link_to 'Retour', root_path, class: 'btn btn-secondary mr-2' %>
            <%= button_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
